
<div class="row">
  <div class="col-md-6">
  <h2>{{name}}, submit your current information and launch a new Quest!</h2>
 
 <form class="form new-quest-form">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <input class="form-input" type="number" id="heightFt-profile" name="heightFt-profile" placeholder="Height (ft)"/>
        </div>
        <div class="form-group">
          <input class="form-input" type="number" id="heightIn-profile" name="heightIn-profile" placeholder="Height (in)"/>
        </div>
        <div class="form-group">
          <input class="form-input" type="text" id="gender-profile" name="gender-profile" placeholder="Gender"/>
        </div>
        <div class="form-group">
          <input class="form-input" type="number" id="age-profile" name="age-profile" placeholder="Age"/>
        </div>
      </div>
        
      <div class="col-md-6">
        <div class="form-group">
          <p>Enter the starting date for your quest below.</p>
       </div>
        <div class="form-group">
          <input class="form-input" type="date" id="startingDate-profile" name="startingDate-profile"/>
       </div>
        <div class="form-group">
          <input class="form-input" type="number" id="startingWeight-profile" name="startingWeight-profile" placeholder="Starting Weight"/>
       </div>
        <div class="form-group">
         <input class="form-input" type="number" id="goalWeight-profile" name="goalWeight-profile" placeholder="Goal Weight"/>
       </div>
     </div>

      <div class="col-md-12">
        <div class="form-group">
          <button class="btn btn-primary" type="submit">NEW QUEST</button>
        </div>
      </div>
    </div>
  </form>     
  </div>
  
  <div class="col-md-6">
    {{#if quests.length}}
    <div class="col-md-6 quest-list">
      <h3>QUESTS</h3>

    {{#each quests as |quest|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/quest/{{quest.id}}">{{quest.starting_date}}</a></h4>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger" data-id="{{quest.id}}">DELETE</button>
        </div>
      </div>
    {{/each}}
    </div>
    {{/if}}

  </div>      
</div>

<script src="./js/profile.js"></script>








