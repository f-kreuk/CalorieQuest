<form method="POST" action="/calculate">
  <label for="weightPounds">Weight (lbs):</label>
  <input type="number" name="weightPounds" id="weightPounds" required>
  
  <label for="heightInches">Height (inches):</label>
  <input type="number" name="heightInches" id="heightInches" required>
  
  <label for="ageYears">Age (years):</label>
  <input type="number" name="ageYears" id="ageYears" required>
  
  <label for="gender">Gender:</label>
  <select name="gender" id="gender" required>
    <option value="male">Male</option>
    <option value="female">Female</option>
    <option value="other">Other</option>
  </select>

  <!-- Add other form fields here if needed -->

  <button type="submit">Calculate</button>
</form>
