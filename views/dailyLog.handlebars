<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daily Log</title>
</head>
<body>
  <h1>Daily Log</h1>

  <form method="POST" action="/dailylog/new">
    <label for="quest_id">Select Quest:</label>
    <select name="quest_id" id="quest_id" required>
      {{#each quests}}
        <option value="{{this.id}}">{{this.name}}</option>
      {{/each}}
    </select>

    <label for="date">Date:</label>
    <input type="date" name="date" id="date" required>

    <label for="weightPounds">Weight (lbs):</label>
    <input type="number" name="weightPounds" id="weightPounds" step="0.01" required>

    <label for="heightInches">Height (inches):</label>
    <input type="number" name="heightInches" id="heightInches" required>

    <label for="ageYears">Age (years):</label>
    <input type="number" name="ageYears" id="ageYears" required>

    <label for="gender">Gender:</label>
    <select name="gender" id="gender" required>
      <option value="male">Male</option>
      <option value="female">Female</option>
      <option value="other">Other</option>
    </select>

    <!-- Additional fields -->
    <label for="expectedWeight">Expected Weight:</label>
    <input type="number" name="expectedWeight" id="expectedWeight" step="0.01" required>

    <label for="caloriesConsumed">Calories Consumed:</label>
    <input type="number" name="caloriesConsumed" id="caloriesConsumed" required>

    <label for="exercise">Exercise:</label>
    <input type="number" name="exercise" id="exercise" step="0.01" required>

    <label for="dailyWeightLoss">Daily Weight Loss:</label>
    <input type="number" name="dailyWeightLoss" id="dailyWeightLoss" step="0.01" required>

    <button type="submit">Save Daily Log</button>
  </form>

  <a href="/profile">Back to Profile</a>
</body>
</html>
